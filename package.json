{
  "name": "klakr",
  "version": "0.0.1",
  "main": "dist/klakr.js",
  "repository": "https://github.com/klakr/klakr",
  "author": "Luc Engelen",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "rollup --config config/rollup.js",
    "eslint": "eslint src/ test/",
    "lint": "yarn eslint",
    "test": "yarn lint && yarn test:unit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "prepare-commit-id $HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.15.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "mocha": "^6.0.2",
    "prepare-commit-id": "ssh://git@github.com:ljpengelen/prepare-commit-id.git",
    "prettier": "^1.16.4",
    "rollup": "^1.4.0",
    "rollup-plugin-buble": "^0.19.6",
    "rollup-plugin-includepaths": "^0.2.3",
    "sinon": "^7.2.6",
    "sinon-chai": "^3.3.0"
  }
}
